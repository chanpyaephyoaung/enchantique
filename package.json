{
   "name": "enchantique",
   "version": "1.0.0",
   "description": "",
   "type": "module",
   "scripts": {
      "start": "node backend/server.js",
      "server": "nodemon -L backend/server.js",
      "client": "npm start --prefix frontend",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
      "data:seed": "node backend/seeder.js -s",
      "data:remove": "node backend/seeder.js -r",
      "test:integration": "cross-env NODE_ENV=test mocha test/integration-tests --timeout 15000 --exit",
      "test:unit": "cross-env NODE_ENV=test mocha test/unit-tests --timeout 15000 --exit",
      "lint": "eslint ./frontend/src/**/*.{js,jsx,ts,tsx}"
   },
   "author": "",
   "license": "ISC",
   "devDependencies": {
      "@babel/preset-env": "^7.23.6",
      "chai": "^5.0.0",
      "concurrently": "^8.2.2",
      "cross-env": "^7.0.3",
      "dotenv": "^16.3.1",
      "eslint": "^8.56.0",
      "eslint-plugin-react": "^7.33.2",
      "eslint-plugin-react-hooks": "^4.6.0",
      "eslint-plugin-react-refresh": "^0.4.5",
      "jest": "^29.7.0",
      "mocha": "^10.2.0",
      "nodemon": "^3.0.2",
      "supertest": "^6.3.3"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "cookie-parser": "^1.4.6",
